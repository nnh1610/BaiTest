@model STTechUserManagement.Models.User

@{
    ViewData["Title"] = "Xác nhận Xóa";
}

<h1>@ViewData["Title"]</h1>

<h3 class="text-danger">Bạn có chắc chắn muốn xóa người dùng này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-3">Mã</dt>
        <dd class = "col-sm-9">@Html.DisplayFor(model => model.Ma)</dd>
        
        <dt class = "col-sm-3">Họ Tên</dt>
        <dd class = "col-sm-9">@Html.DisplayFor(model => model.HoTen)</dd>

        <dt class = "col-sm-3">Email</dt>
        <dd class = "col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
    </dl>
    
    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Ma" /> 
        
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>